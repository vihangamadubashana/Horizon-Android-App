<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_3">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@color/blue"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img_3"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:title="Le Grand Galle"
            app:expandedTitleMarginTop="400dp"
            app:titleTextColor="@color/white">

            <ImageView
                android:layout_width="317dp"
                android:layout_height="180dp"
                android:layout_gravity="center|end"
                android:layout_marginBottom="15dp"
                android:src="@drawable/grand_galle"
                app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                android:layout_width="176dp"
                android:layout_height="66dp"
                app:layout_collapseMode="pin" />


        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="643dp"
        android:background="@drawable/layout_bg"
        app:layout_anchor="@+id/nestedScrollView"
        app:layout_anchorGravity="center"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="5000dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:text="Located in Galle, Le Grand Galle by Asia Leisure is in the city center and near the beach.the area's natural beauty can be seen at Jungle Beach and Unawatuna Beach. National Maritime Museum and Hikkaduwa National Park are also worth visiting."
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/textView5"
                android:layout_width="212dp"
                android:layout_height="38dp"
                android:layout_marginTop="52dp"
                android:drawableLeft="@drawable/baseline_home_24"
                android:drawablePadding="12sp"
                android:text="No.30 Park Road Kaluwalla, Galle"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="16dp" />

            <TextView
                android:layout_width="162dp"
                android:layout_height="43dp"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/baseline_local_phone_24"
                android:drawablePadding="12sp"
                android:gravity="center"
                android:text=" +94 115 769 500 "
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="16dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="117dp"
                android:layout_height="74dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="64dp"
                android:background="#00DFFB"
                android:gravity="center"
                android:text="1 night, 2 adults
                LKR 51,471 /="
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/l7"
                android:layout_width="164dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:backgroundTint="#0099ff"
                android:drawableLeft="@drawable/baseline_location_on_24"
                android:ems="10"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="location"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                app:layout_constraintVertical_bias="1.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>



</androidx.coordinatorlayout.widget.CoordinatorLayout>