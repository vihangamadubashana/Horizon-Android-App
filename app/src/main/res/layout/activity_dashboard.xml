                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/c7"
                            android:layout_width="wrap_content"
                            android:layout_height="212dp"
                            android:layout_alignParentEnd="true"
